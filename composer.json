{
  "name": "juliangut/slim-exception",
  "description": "Slim HTTP exceptions and exception handling",
  "keywords": [
    "slim",
    "http",
    "exception"
  ],
  "homepage": "https://github.com/juliangut/slim-exception",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/slim-exception",
    "issues": "https://github.com/juliangut/slim-exception/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0",
    "ext-mbstring": "*",
    "slim/slim": "^4.11",
    "willdurand/negotiation": "^3.0"
  },
  "require-dev": {
    "ext-dom": "*",
    "ext-json": "*",
    "ext-simplexml": "*",
    "filp/whoops": "^2.15",
    "infection/infection": "~0.25|~0.27",
    "juliangut/easy-coding-standard-config": "^1.15",
    "juliangut/phpstan-config": "^1.1",
    "laminas/laminas-diactoros": "^3.2",
    "overtrue/phplint": "^9.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.14",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^9.6.13|^10.4",
    "povils/phpmnd": "^3.2",
    "roave/security-advisories": "dev-master",
    "symfony/var-dumper": "^7.1.4"
  },
  "suggest": {
    "filp/whoops": "Enhance development error reporting (>=2.15)",
    "symfony/var-dumper": "Help filp/whoops enhancing stack-traces (>=6.0)"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Slim\\Exception\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Slim\\Exception\\Tests\\": "tests/Exception/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true
    }
  }
}
